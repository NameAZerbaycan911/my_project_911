            const totalAmount = () =>{
                let amount = 0
                for(let total of cartItem){
                    if(cartItem[total] > 0){
                       let productInfo = Product.find(resp => resp.id === Number(total))
                       amount +- Math.floor(cartItem[total] * productInfo.price)
                    }
                }
                return amount
            }